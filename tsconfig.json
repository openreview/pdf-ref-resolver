{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "rootDirs": [
      "src/"
    ],
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "inlineSources": true,
    "experimentalDecorators": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "types": [
      "node",
      "jest"
    ],
    "module": "NodeNext",
    "target": "ES2020",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}